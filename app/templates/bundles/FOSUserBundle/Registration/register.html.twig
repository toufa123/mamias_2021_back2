{% extends 'auth.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}
{% block title %}Authentification{% endblock %}
{% block stylesheets %}
    <style>
        form .indicator {
            height: 10px;
            margin: 10px 0;
            display: flex;
            align-items: center;
            justify-content: space-between;
            display: none;
        }

        form .indicator span {
            position: relative;
            height: 100%;
            width: 100%;
            background: lightgrey;
            border-radius: 5px;
        }

        form .indicator span:nth-child(2) {
            margin: 0 3px;
        }

        form .indicator span.active:before {
            position: absolute;
            content: '';
            top: 0;
            left: 0;
            height: 100%;
            width: 100%;
            border-radius: 5px;
        }

        .indicator span.weak:before {
            background-color: #ff4757;
        }

        .indicator span.medium:before {
            background-color: orange;
        }

        .indicator span.strong:before {
            background-color: #23ad5c;
        }

        form .text {
            font-size: 20px;
            font-weight: 500;
            display: none;
            margin-bottom: -10px;
        }

        form .text.weak {
            color: #ff4757;
        }

        form .text.medium {
            color: orange;
        }

        form .text.strong {
            color: #23ad5c;
        }
    </style>

{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-lg-6">
            <div class="wrapper-page2">
             <span><img src="{{ asset('resources/images/signup.svg') }}"
                        alt="MAMIAS 3.0" style="width:100%;height:auto"></span>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="wrapper-page">
                <div class="property-card">
                    <div class="text-center account-logo-box">
                        <h2 class="text-uppercase">
                            <a href="{{ path('home') }}" class="text-success">
                                            <span><img src="{{ asset('resources/logo/Logo-Mamias-web.png') }}"
                                                       alt="MAMIAS 3.0"></span>
                            </a>
                        </h2>
                        <!--<h4 class="text-uppercase font-bold m-b-0">Sign In</h4>-->
                    </div>
                    <div class="property-content">
                        <form class="form-horizontal" action="{{ path('fos_user_registration_register') }}"
                              method="post">
                            {{ form_start(form,{'attr': {'novalidate': 'novalidate'}}) }}

                            {{ form_errors(form) }}

                            <div class="form-group primary m-b-10 ">
                                <div class="col-xs-12">
                                    {{ form_errors(form.username) }}
                                    {{ form_widget(form.username, {'attr': {'placeholder': 'User Name'}}) }}
                                </div>
                            </div>
                            <div class="form-group m-b-10">
                                <div class="col-xs-12">
                                    {{ form_errors(form.email) }}
                                    {{ form_widget(form.email, {'attr': {'placeholder': 'Email'}}) }}
                                </div>
                            </div>

                            <div class="form-group m-b-10">
                                <div class="col-xs-12">
                                    {{ form_errors(form.plainPassword.first) }}
                                    {{ form_widget(form.plainPassword.first,{'attr': {'placeholder': 'Password'}}) }}
                                </div>

                            </div>
                            <div class="form-group m-b-10">

                            </div>
                            <div class="form-group m-b-10">
                                <div class="col-xs-12">
                                    {{ form_errors(form.plainPassword.second) }}
                                    {{ form_widget(form.plainPassword.second, {'attr': {'placeholder': 'Repeat Password'}}) }}

                                </div>
                            </div>
                            <div class="form-group m-b-10">
                                <div class="col-xs-12">
                                    {{ form_errors(form.country) }}
                                    {{ form_widget(form.country, {'attr': {'placeholder': 'Country' }}) }}

                                </div>
                            </div>
                            <div class="form-group m-b-10">
                                <div class="col-xs-12">
                                    <div class="checkbox checkbox-primary">
                                        {{ form_errors(form.agreeTerms) }}
                                        {{ form_label(form.agreeTerms) }}
                                        {{ form_widget(form.agreeTerms) }}

                                    </div>
                                </div>
                            </div>
                            <div class="form-group account-btn text-center m-b-10">
                                <div class="col-xs-12">
                                    <button class="btn btn-block w-md btn-primary btn-bordered waves-effect waves-light"
                                            type="submit">Register
                                    </button>
                                </div>
                            </div>
                            {{ form_end(form) }}
                        </form>
                    </div>
                </div>
                <div class="row m-t-20">
                    <div class="col-sm-12 text-center">
                        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                            {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
                            <a href="{{ path('sonata_user_admin_security_logout') }}">
                                {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                            </a>
                        {% else %}
                            <p class="text-light-blue">Already have an account? <a
                                    href="{{ path('sonata_user_admin_security_login') }}"
                                    class=" text-primary m-l-5"><b>{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</b></a>
                            </p>

                        {% endif %}


                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}

    <script>
        var resizefunc = [];


    </script>



{% endblock %}
